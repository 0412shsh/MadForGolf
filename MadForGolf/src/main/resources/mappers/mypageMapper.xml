<!-- 가계부 -->
<!-- 월별 구매 금액 (차트)-->
<select id="purchaseMonth" resultType="Integer">
	select sum(price)
	from mfg_deal
	where buyer_id=#{buyer_id}
	and month(deal_date)=month(sysdate())
</select>

